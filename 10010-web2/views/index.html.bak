        // æ„å»ºå ä½ç¬¦æ•°æ®ï¼ˆä¿ç•™ç”¨äºå…¼å®¹ï¼‰
        function buildPlaceholders(data, diffStats, lastStats) {
            const placeholders = {};
            
            // åŸºç¡€ä¿¡æ¯
            placeholders['[å¥—é¤]'] = data.mainPackage || 'æœªçŸ¥å¥—é¤';
            placeholders['[æ—¶é•¿]'] = calculateTimeIntervalFromTimestamp(data.stats_start_time);
            placeholders['[æ—¶é—´]'] = new Date().toLocaleTimeString('zh-CN', { hour12: false });
            
            // æµé‡æ¡¶å ä½ç¬¦
            const bucketNames = {
                'common_limited': 'é€šç”¨æœ‰é™',
                'common_unlimited': 'é€šç”¨ä¸é™',
                'regional_limited': 'åŒºåŸŸæœ‰é™',
                'regional_unlimited': 'åŒºåŸŸä¸é™',
                'targeted_limited': 'å…æµæœ‰é™',
                'targeted_unlimited': 'å…æµä¸é™',
                'æ‰€æœ‰é€šç”¨': 'æ‰€æœ‰é€šç”¨',
                'æ‰€æœ‰å…æµ': 'æ‰€æœ‰å…æµ',
                'æ‰€æœ‰æµé‡': 'æ‰€æœ‰æµé‡'
            };
            
            Object.keys(bucketNames).forEach(key => {
                const bucket = data.buckets[key] || { total: 0, used: 0, remain: 0 };
                const diff = diffStats[key] || { used: 0, today: 0 };
                const name = bucketNames[key];
                
                placeholders[`[${name}.æ€»é‡]`] = formatFlow(bucket.total);
                placeholders[`[${name}.å·²ç”¨]`] = formatFlow(bucket.used);
                placeholders[`[${name}.å‰©ä½™]`] = (bucket.total === 0 || bucket.total >= 999999) ? 'æ— é™' : formatFlow(bucket.remain);
                placeholders[`[${name}.ç”¨é‡]`] = formatFlow(diff.used);
                placeholders[`[${name}.ä»Šæ—¥ç”¨é‡]`] = formatFlow(diff.today);
            });
            
            return placeholders;
        }

        // åº”ç”¨å ä½ç¬¦æ›¿æ¢
        function applyPlaceholders(text, placeholders) {
            let result = text;
            Object.entries(placeholders).forEach(([key, val]) => {
                const escapedKey = key.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
                result = result.replace(new RegExp(escapedKey, 'g'), val);
            });
            return result;
        }

        // ä»æ—¶é—´æˆ³è®¡ç®—æ—¶é•¿
        function calculateTimeIntervalFromTimestamp(timestamp) {
            if (!timestamp) return 'é¦–æ¬¡è¿è¡Œ';
            
            // æ”¯æŒISO 8601æ ¼å¼å­—ç¬¦ä¸²å’Œæ¯«ç§’æ—¶é—´æˆ³
            const startTime = typeof timestamp === 'string' ? new Date(timestamp).getTime() : timestamp;
            const now = Date.now();
            const diffMs = now - startTime;
            
            const minutes = Math.floor(diffMs / (1000 * 60));
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);
            
            if (days > 0) return `${days}å¤©${hours % 24}å°æ—¶`;
            if (hours > 0) return `${hours}å°æ—¶${minutes % 60}åˆ†é’Ÿ`;
            return `${minutes}åˆ†é’Ÿ`;
        }

