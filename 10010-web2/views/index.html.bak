        // æ ¼å¼åŒ–æµé‡
        function formatFlow(mb) {
            if (mb === null || mb === undefined || isNaN(mb)) return '0MB';
            
            const num = parseFloat(mb);
            
            if (num >= 1024 * 1024) {
                return (num / 1024 / 1024).toFixed(2) + 'TB';
            } else if (num >= 1024) {
                return (num / 1024).toFixed(2) + 'GB';
            } else if (num >= 1) {
                return num.toFixed(2) + 'MB';
            } else if (num > 0) {
                return (num * 1024).toFixed(2) + 'KB';
            } else {
                return '0MB';
            }
        }

        // éšè—æ‰‹æœºå·ç¬¬4-11ä½
        function maskMobile(mobile) {
            if (!mobile || mobile.length !== 11) {
                return mobile || 'æœªçŸ¥å·ç ';
            }
            // å°†ç¬¬4-11ä½ï¼ˆç´¢å¼•3-10ï¼‰æ›¿æ¢ä¸º ********
            return mobile.substring(0, 3) + '********';
        }

        // åˆ‡æ¢ä¸»å‰¯å¡ä¿¡æ¯å±•å¼€/æ”¶èµ·
        function toggleViceCard(viceId) {
            const content = document.getElementById(`${viceId}-content`);
            const toggle = document.getElementById(`${viceId}-toggle`);
            
            if (content && toggle) {
                content.classList.toggle('collapsed');
                toggle.classList.toggle('collapsed');
            }
        }
        
        // ç¡®ä¿å‡½æ•°åœ¨å…¨å±€ä½œç”¨åŸŸå¯è®¿é—®
        window.toggleViceCard = toggleViceCard;

        // è®¡ç®—æ—¶é•¿é—´éš”
        function calculateTimeInterval(lastTimestamp) {
            if (!lastTimestamp) return 'é¦–æ¬¡è¿è¡Œ';
            
            const now = Date.now();
            const last = lastTimestamp * 1000; // è½¬æ¢ä¸ºæ¯«ç§’
            const diffMs = now - last;
            
            if (diffMs < 0) return 'æ—¶é—´å¼‚å¸¸';
            
            const minutes = Math.floor(diffMs / (1000 * 60));
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);
            
            if (days > 0) {
                return `${days}å¤©${hours % 24}å°æ—¶`;
            } else if (hours > 0) {
                return `${hours}å°æ—¶${minutes % 60}åˆ†é’Ÿ`;
            } else if (minutes > 0) {
                return `${minutes}åˆ†é’Ÿ`;
            } else {
                return 'åˆšåˆš';
            }
        }

        // è‡ªåŠ¨åˆ·æ–°ï¼ˆå¯é€‰ï¼Œé»˜è®¤å…³é—­ï¼‰
