                // ä½¿ç”¨æ–°çš„query.phpï¼Œå®ƒä¼šè‡ªåŠ¨å¤„ç†é€šçŸ¥å’Œstatsä¿å­˜
                const response = await fetch(`../api/query.php?token=${accessToken}`);
