                    expireText = `â° ${pkg.endDate}`;
                } else if (pkg.endDate === 'é•¿æœŸæœ‰æ•ˆ') {
                    expireText = `âœ“ é•¿æœŸæœ‰æ•ˆ`;
                }
                
                card.innerHTML = `
                    <div class="package-header">
                        <div class="package-name">${pkg.name}</div>
                        ${isFree ? '<span class="package-badge">å…è´¹</span>' : ''}
                        ${isUnlimited ? '<span class="package-badge" style="background: #ff9800;">ä¸é™é‡</span>' : ''}
                    </div>
                    <div class="package-info">
                        <span class="package-used">${formatFlow(pkg.used)} / ${isUnlimited ? 'âˆ' : formatFlow(pkg.total)}</span>
