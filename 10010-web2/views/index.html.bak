            container.innerHTML = '';

            // æ¡¶åç§°æ˜ å°„ï¼ˆä¸åŸé¡¹ç›®ä¿æŒä¸€è‡´ï¼‰
            const bucketNames = {
                'common_limited': 'é€šç”¨æœ‰é™',
