                { key: 'æ‰€æœ‰å…æµ', name: 'ğŸ¯ æ‰€æœ‰å…æµ', class: 'targeted' },
                { key: 'common_limited', name: 'é€šç”¨æœ‰é™', class: '' },
                { key: 'common_unlimited', name: 'é€šç”¨ä¸é™', class: '' },
