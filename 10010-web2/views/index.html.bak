                    loadingSteps.style.display = 'none';
                    showError(result.message || result.error || 'æŸ¥è¯¢å¤±è´¥ï¼Œè¯·ç¨åé‡è¯•');
                }
            } catch (error) {
                console.error('Error:', error);
                
                // æ ‡è®°å½“å‰æ´»åŠ¨æ­¥éª¤ä¸ºé”™è¯¯
                const currentStep = document.querySelector('.loading-step.active');
